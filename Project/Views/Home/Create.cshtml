@model DataLayer.Entities.Player

<div class="row">
    <div class="col-md-4">
        <button class="btn btn-link" id="team-createBtn">добавить новую команду</button>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label">Имя</label>
                <input asp-for="FirstName" class="form-control"/>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label">Фамилия</label>
                <input asp-for="LastName" class="form-control"/>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label">Пол</label>
                <select asp-for="Gender" class="form-control">
                    <option></option>
                    <option value="Мужской">Мужской</option>
                    <option value="Женский">Женский</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BirthDay" class="control-label">День рождения</label>
                <input asp-for="BirthDay" type="date" class="form-control"/>
                <span asp-validation-for="BirthDay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Country" class="control-label">Страна</label>
                <select asp-for="Country" class="form-control">
                    <option></option>
                    <option>Россия</option>
                    <option>США</option>
                    <option>Италия</option>
                </select>
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeamId" class="control-label">Команда</label>
                <select id="select" asp-for="TeamId" class="form-control">
                    <option></option>
                    @foreach (var team in ViewBag.TeamId)
                    {
                        <option value="@team.Id">@team.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary"/>
            </div>
        </form>
    </div>
    <div id="form-team"></div>
</div>